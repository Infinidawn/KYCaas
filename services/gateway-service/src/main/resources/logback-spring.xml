<configuration>
    <property name="CONSOLE_PATTERN" value="%d{HH:mm:ss.SSS} %-5level %X{X-Correlation-Id:-N/A} %logger{36} - %msg%n"/>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_PATTERN}</pattern>
        </encoder>
    </appender>
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
